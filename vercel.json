{
  "version": 2,
  "buildCommand": "npm run website:build",
  "outputDirectory": "docs/.vitepress/dist",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*\\.(css|js|ico|svg|png|jpg|jpeg|gif|woff|woff2|webp))",
      "dest": "/$1"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(?!api)(.*)",
      "dest": "/$1.html"
    }
  ]
} 