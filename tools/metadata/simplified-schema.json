{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "LogoHub Simplified Metadata Schema",
  "description": "Simplified metadata schema for LogoHub logos focusing on essential information",
  "type": "object",
  "required": ["name", "title", "website", "colors", "hasSymbol", "license", "created", "updated"],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier for the logo (matches directory name)",
      "pattern": "^[a-z0-9\\-\\.]+$",
      "examples": ["google", "react", "node.js"]
    },
    "title": {
      "type": "string",
      "description": "Display name of the company/project",
      "minLength": 1,
      "examples": ["Google", "React", "Node.js"]
    },
    "website": {
      "type": "string",
      "format": "uri",
      "description": "Official website URL",
      "examples": ["https://google.com", "https://reactjs.org"]
    },
    "colors": {
      "type": "array",
      "description": "Brand colors for API suggestions (hex format)",
      "items": {
        "type": "string",
        "pattern": "^#[0-9A-Fa-f]{6}$"
      },
      "minItems": 1,
      "maxItems": 5,
      "examples": [["#4285F4", "#34A853"], ["#61DAFB"]]
    },
    "hasSymbol": {
      "type": "boolean",
      "description": "Whether a symbol-only variant exists",
      "examples": [true, false]
    },
    "license": {
      "type": "string",
      "description": "License or usage information",
      "examples": ["Please check company's brand guidelines", "MIT", "Apache 2.0"]
    },
    "created": {
      "type": "string",
      "format": "date",
      "description": "Date when logo was first added (YYYY-MM-DD)",
      "examples": ["2024-01-15"]
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp",
      "examples": ["2024-01-15T10:30:00.000Z"]
    }
  },
  "examples": [
    {
      "name": "google",
      "title": "Google", 
      "website": "https://google.com",
      "colors": ["#4285F4", "#34A853", "#EA4335", "#FBBC05"],
      "hasSymbol": false,
      "license": "Please check company's brand guidelines",
      "created": "2024-01-15",
      "updated": "2024-01-15T10:30:00.000Z"
    },
    {
      "name": "react",
      "title": "React",
      "website": "https://reactjs.org", 
      "colors": ["#61DAFB"],
      "hasSymbol": true,
      "license": "MIT",
      "created": "2024-01-15",
      "updated": "2024-01-15T10:30:00.000Z"
    }
  ]
} 